extends index

block css
  link(rel='stylesheet', href='css/login.css')

block login
  div.login-container(ng-controller='LoginCtrl')
    form.form-signin
      h2.form-signin-heading Please sign in
      input.input-block-level(ng-model='user', type='text', placeholder='Username')
      input.input-block-level(ng-model='pass', type='password', placeholder='Password')
      button.btn.btn-large.btn-primary(ng-click='login()', type='submit') Sign in

  script(src='js/lib/angular/angular.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')

  script(src='js/jquery.js')
  script(src='js/bootstrap.js')